<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#c7bdbd"
    tools:context="com.akhil.nikhil.paypark.sp_login">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user"
        android:id="@+id/profile"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVICE PROVIDER"
        android:layout_below="@id/profile"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/user"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:layout_below="@id/profile"
        android:id="@+id/email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:imeOptions="actionNext"
        android:id="@+id/pass_id"
        android:layout_below="@id/email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new account !"
        android:layout_below="@id/glogin"
        android:id="@+id/log_id"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:textColor="#222"
        android:textStyle="bold"
        android:onClick="createacc"
        android:clickable="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_id"
        android:text="Forget Password?"
        android:textSize="18dp"
        android:onClick="forget_pass"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:layout_below="@id/pass_id"
        android:id="@+id/sign_id"
        android:layout_marginTop="32dp"
        android:layout_centerInParent="true"
        android:onClick="signin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in with :-"
        android:layout_below="@id/sign_id"
        android:id="@+id/altsign_id"
        android:imeOptions="actionDone"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search"
        android:layout_marginTop="10dp"
        android:id="@+id/glogin"
        android:layout_below="@id/altsign_id"

        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:text="Google"
        android:onClick="google"
        android:layout_toRightOf="@id/glogin"
        android:layout_below="@id/altsign_id"/>

</RelativeLayout>
