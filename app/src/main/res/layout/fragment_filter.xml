<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotelparking"
    tools:context="com.akhil.nikhil.paypark.FilterFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a6a9a0a0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Vehicle"
            android:textStyle="bold"
            android:layout_marginTop="29dp"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:id="@+id/sel_vehicle"
            android:textColor="#130909"
            />


        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sel_vehicle"
            android:id="@+id/vehi_panel"
            android:layout_centerHorizontal="true"

            ></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Set Parking Rate"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sel_vehicle"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/parking_panel"
            android:layout_marginTop="90dp"
            android:textColor="#130909"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/parking_fare"
            android:backgroundTint="#000"
            android:layout_below="@id/parking_panel"
            android:layout_centerHorizontal="true"
            >

        </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="proceed"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/proceed_filter"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
