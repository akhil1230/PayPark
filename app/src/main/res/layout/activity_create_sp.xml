<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7bdbd"
    android:padding="20dp"
    tools:context="com.akhil.nikhil.paypark.create_sp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user"
        android:id="@+id/profile"
        android:layout_alignParentRight="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:id="@+id/name"
        android:layout_marginTop="85dp"
        android:layout_toLeftOf="@id/profile"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:imeOptions="actionNext"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="address"
        android:id="@+id/add_id"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:editable="false"
        android:clickable="true"
        android:layout_below="@id/name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@id/add_id"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="new password"
        android:layout_below="@id/mob_id"
        android:id="@+id/pass_id"
        android:inputType="textPassword"
        android:imeOptions="actionNext"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mobile no."
        android:id="@+id/mob_id"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:layout_below="@id/email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_id"
        android:hint="Capacity ( estimate number of vehicle) "
        android:id="@+id/p_space"
        android:inputType="number"
        android:imeOptions="actionDone"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:layout_marginTop="30dp"
        android:layout_below="@id/p_space"
        android:id="@+id/log_id"
        android:layout_centerInParent="true"
        android:onClick="createacc"
        />

</RelativeLayout>
